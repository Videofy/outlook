  body
    div.preload
      div.loading
        img.loading-text(src="https://s3.amazonaws.com/data.monstercat.com/outlook/loading.svg")
        br
        img.loading-art(src="https://s3.amazonaws.com/data.monstercat.com/outlook/art.jpg")
        .loading-logos
          img.loading-logo(src="https://s3.amazonaws.com/data.monstercat.com/outlook/loading-dot.svg")
          img.loading-logo(src="https://s3.amazonaws.com/data.monstercat.com/outlook/loading-dot.svg")
