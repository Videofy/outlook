          img.loading-logo(src="https://s3.amazonaws.com/data.monstercat.com/outlook/loading-dot.svg")
          img.loading-logo(src="https://s3.amazonaws.com/data.monstercat.com/outlook/loading-dot.svg")
      br
      div.skip
        a(href="https://www.monstercat.com/index.html")
          span Skip to Monstercat.com
    div(id="container", class="box-container")
      ul(id="scene", class="scene")
        li(class="layer", data-depth="1.00")
          div.stars
        li(class="layer", data-depth="0.80")
          div.aurora
        li(class="layer", data-depth="0.60")
          div.mountains
        li(class="layer", data-depth="0.40")
          div.trees
        li(class="layer", data-depth="0.20")
          div.grass
    div.cover-page
      div.album-container
        img.album-name(src="https://s3.amazonaws.com/data.monstercat.com/outlook/album-name.svg")
        img.album-art(src="https://s3.amazonaws.com/data.monstercat.com/outlook/art.jpg")
        div.soundcloud-embed
          div.soundcloud-square
            a.sc-player(href="https://soundcloud.com/monstercat/sets/monstercat-015-outlook")
        img.available(src="https://s3.amazonaws.com/data.monstercat.com/outlook/avail.svg")
        div.links-group
          div.sales-link
            a.link-tag(href="http://monster.cat/1dgCwjx",style="color: #08c !important")
              img.logo-image(src='https://s3.amazonaws.com/data.monstercat.com/outlook/logos_itu.png')
          div.sales-link
            a.link-tag(href="http://monster.cat/1jlTuuq",style="color: #08c !important")
              img.logo-image(src='https://s3.amazonaws.com/data.monstercat.com/outlook/logos_spo.png')
          div.sales-link
            a.link-tag(href="http://monster.cat/IfQHqo",style="color: #08c !important")
              img.logo-image(src='https://s3.amazonaws.com/data.monstercat.com/outlook/logos_ban.png')
    div.top-right
      a(href="https://www.monstercat.com/index.html")
        span Continue to Monstercat.com
    .side-bar
      .content-container
        .content
          form.form-horizontal.hidden.form.gift-form#gift-form
            h4.text-center With your purchase of the album, we will send one of your friends a free copy!
            .control-group
              label.control-label.friend-email(for="form-name") Your Name
              .controls
                input#form-name.input-field(type='text',placeholder='Name', name="name")
            .control-group
              label.control-label(for="form-email") Your Email
              .controls
                input#form-email.input-field(type='text',placeholder='Email',name='email')
            .control-group
              label.control-label(for="form-itunesNo") Sales Receipt No.
              .controls
                input#form-itunesNo.input-field(type='text',placeholder='Sales Receipt No.',name='itunesNo')
            .control-group
              label.control-label(for="form-friend") Friend's Name
              .controls
                input#form-friend.input-field(type='text',placeholder='Name',name='friendName')
            .control-group
              label.control-label(for="form-friendEmail") Friend's Email
              .controls
                input#form-friendEmail.input-field(type='text',placeholder='Email',name='friendEmail')
            .control-group
              .controls
                input.btn.submit-gift(type='submit',value='Send Gift')
        .notice
          span.notice-message *Gifts are delayed and do not send immediately
        .err-section
          span.err-message show the err
      .gift.clickable.arrow#gift-btn(data-toggle="tooltip", title="Give the Gift", data-placement="top")
    script(src="lib/parallax.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js")
    script(src="lib/soundcloud.player.api.js")
    script(src="lib/sc-player.js")
    script(src="lib/alertify.min.js")
    script(src='public/script/bootstrap.min.js')
    script(type='text/javascript', src='index.js')
    script.
      var scene = document.getElementById('scene');
      var parallax = new Parallax(scene);
    script.
      $(window).resize(
        function () {
          $('ol.sc-trackslist').css('height', Math.min($(window).width()/2-66, 232) + "px");
        }
      );
      var numLeft = 5;
      function load(el, url) {
        var img = $("<img />").attr('src', url).load(function() {
          if (!this.complete ||
              typeof this.naturalWidth == "undefined" ||
              this.naturalWidth == 0) {
            console.log("Problem loading image");
          } else {
            $(el).append(img);
            numLeft -= 1;
            $('.loading-logos img:last-child').remove();
            if (numLeft == 0) {
              $(".preload").fadeOut(1000);
              $(".side-bar").addClass("side-bar-fade");
            }
          }
        });
      }

      load(".stars", "https://s3.amazonaws.com/data.monstercat.com/outlook/stars.jpg");
      load(".aurora", "https://s3.amazonaws.com/data.monstercat.com/outlook/aurora.png");
      load(".mountains", "https://s3.amazonaws.com/data.monstercat.com/outlook/mountains.png");
      load(".trees", "https://s3.amazonaws.com/data.monstercat.com/outlook/trees.png");
      load(".grass", "https://s3.amazonaws.com/data.monstercat.com/outlook/grass.png");

